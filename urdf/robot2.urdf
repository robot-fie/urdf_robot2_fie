<?xml version="1.0"?>
<robot name="robot2"
  xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4231 0.25158 0.0515"/>
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <box size="0.4231 0.25158 0.0515"/>
      </geometry>
    </collision>
  </link>

  <xacro:include filename="$(find realsense2_description)/urdf/_d435i.urdf.xacro"/>
  <xacro:sensor_d435i parent="base_link">
    <origin xyz="0.3 0.0 0.07" rpy="0 0 0"/>
  </xacro:sensor_d435i>

  <link name="base_batteries">
    <visual>
      <geometry>
        <box size="0.3031 0.065 0.0939"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3031 0.065 0.0939"/>
      </geometry>
    </collision>
  </link>
  <joint name="base_to_batteries" type="fixed">
    <parent link="base_link"/>
    <child link="base_batteries"/>
    <origin xyz="0 0 0.025"/>
  </joint>

  <link name="base_wifi">
    <visual>
      <geometry>
        <box size="0.0275 0.1857 0.1202"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.0275 0.1857 0.1202"/>
      </geometry>
    </collision>
  </link>
  <joint name="base_to_wifi" type="fixed">
    <parent link="base_link"/>
    <child link="base_wifi"/>
    <origin xyz="-0.2253 0 0"/>
  </joint>

  <!-- 1. Rueda y motor delantero izquierdo-->
  <link name="left_front_motor">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0439" radius="0.023"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0439" radius="0.023"/>
      </geometry>
    </collision>
  </link>
  <joint name="left_front_motor_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_front_motor"/>
    <origin rpy="0 0 0" xyz="0.18855 0.12579 0"/>
  </joint>

  <link name="left_front_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.077" radius="0.1295"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.077" radius="0.1295"/>
      </geometry>
    </collision>
  </link>
  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="left_front_motor"/>
    <child link="left_front_wheel"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0.0 0.06045 0"/>
  </joint>

  <!-- 2. Rueda y motor delantero derecho-->
  <link name="right_front_motor">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0439" radius="0.023"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0439" radius="0.023"/>
      </geometry>
    </collision>
  </link>
  <joint name="right_front_motor_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_front_motor"/>
    <origin rpy="0 0 0" xyz="0.18855 -0.12579 0"/>
  </joint>

  <link name="right_front_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.077" radius="0.1295"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.077" radius="0.1295"/>
      </geometry>
    </collision>
  </link>
  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="right_front_motor"/>
    <child link="right_front_wheel"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0.0 -0.06045 0"/>
  </joint>


  <!-- 3. Rueda y motor trasero izquierdo-->
  <link name="left_back_motor">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0439" radius="0.023"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0439" radius="0.023"/>
      </geometry>
    </collision>
  </link>
  <joint name="left_back_motor_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_back_motor"/>
    <origin rpy="0 0 0" xyz="-0.18855 0.12579 0"/>
  </joint>

  <link name="left_back_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.077" radius="0.1295"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.077" radius="0.1295"/>
      </geometry>
    </collision>
  </link>
  <joint name="left_back_wheel_joint" type="continuous">
    <parent link="left_back_motor"/>
    <child link="left_back_wheel"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0.0 0.06045 0"/>
  </joint>

  <!-- 4. Rueda y motor trasero derecho-->
  <link name="right_back_motor">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0439" radius="0.023"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0439" radius="0.023"/>
      </geometry>
    </collision>
  </link>
  <joint name="right_back_motor_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_back_motor"/>
    <origin rpy="0 0 0" xyz="-0.18855 -0.12579 0"/>
  </joint>

  <link name="right_back_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.077" radius="0.1295"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.077" radius="0.1295"/>
      </geometry>
    </collision>
  </link>
  <joint name="right_back_wheel_joint" type="continuous">
    <parent link="right_back_motor"/>
    <child link="right_back_wheel"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0.0 -0.06045 0"/>
  </joint>
</robot>